<%- include('./includes/head.ejs') %>
</head>

<body>
<%- include('./includes/navigation.ejs') %>

<main class="centered">
    <% for ( hotel in htls) {
    if(htls.hasOwnProperty(hotel)){%>

        <article class="card ">
            <header class="card__header">
                <h1 class="hotel__title"><%= htls[hotel].Property_Name %></h1>
                <input type="hidden" id="name" value="<%= htls[hotel].Property_Name %>">
                <input type="hidden" id="hotel_id" value="<%= htls[hotel].id %>">
            </header>
            <div class="card__image">
                <img src="<%= htls[hotel].Image_Url %>"
                     alt="<%= htls[hotel].Property_Name %>">
            </div>
            <div class="card__content">
                <h3 class="hotel__description"><a href="/hotel/<%= htls[hotel].id %>">Hotel ID: <%= htls[hotel].id %></a> </h3>
                <p class="hotel__description"><b>Info: </b><%= htls[hotel].Additional_info %></p><br>
                <p class="hotel__description"><b>Room type: </b><%= htls[hotel].Room_Type %></p><br>
                <p class="hotel__price"><b>Rating:</b> <%= htls[hotel].Site_Review_Rating %>/5</p><br>
                <p class="hotel__description"><b>Address:</b> <%= htls[hotel].Address %></p><br>
                <p class="hotel__description"><b>Locality:</b> <%= htls[hotel].Locality %></p><br>
                <p class="hotel__description"><b>City: </b><%= htls[hotel].City %></p><br>
                <p class="hotel__description"><b>Description: </b><%= htls[hotel].Hotel_Description %></p><br><br>
                <p class="hotel__price"><b>Facilities: </b><%= htls[hotel].Room_Facilities %></p><br>
                <p class="hotel__description"><b>Category: </b><%= htls[hotel].Property_Type %></p><br>
                <p class="hotel__price"><b>Type: </b><%= htls[hotel].Room_Type %></p><br>
                <p class="hotel__description"><b>Info: </b><%= htls[hotel].Additional_info %></p><br>
                <p class="hotel__description"><b>Room type:</b> <%= htls[hotel].Room_Type %></p><br>

            </div>

    <% }} %>

        </article>

        <br><br>
</main>
<main>
    <article>
        <header class="card__header">
            <h1 class="hotel__title">User Reviews</h1>
        </header>
        <div class="reviews"></div>
    </article>
</main>

<main class="centered">
    <h2>Recommended Hotels</h2>
    <div class="grid"></div>
    <div class="offline"></div>
    <button type="button" class="recom">See More Recommendations!</button>

</main>





<script src="/javascripts/loadReviews.js"></script>
<script src="/javascripts/recoms.js"></script>

<%- include('./includes/end.ejs') %>